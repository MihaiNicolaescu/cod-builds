<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index"
    android:background="@drawable/background"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:height="50dp"
        android:background="@drawable/meta_weapons"
        android:id="@+id/buttonMetaWeapons"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMetaWeapons"
        android:height="50dp"
        android:background="@drawable/weapons_builds"
        android:id="@+id/buttonBuildsWeapons"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBuildsWeapons"
        android:height="50dp"
        android:background="@drawable/news_weapons"
        android:id="@+id/buttonNewsWeapons"/>



</androidx.constraintlayout.widget.ConstraintLayout>