<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meta_weapon"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="◉Weapon name"
        android:textSize="30dp"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/weaponNameHold"
        android:fontFamily="@font/outfitregular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Micro SMG"
        android:textSize="20dp"
        android:padding="15dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="@id/weaponNameHold"
        android:layout_marginTop="50dp"
        android:id="@+id/weaponName"
        android:fontFamily="@font/outfitregular"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="◉Attachement 1"
        android:textSize="30dp"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/weaponName"
        android:layout_marginTop="15dp"
        android:id="@+id/weaponAtt1Hold"
        android:fontFamily="@font/outfitregular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Muzzle UZY"
        android:textSize="20dp"
        android:padding="15dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="@id/weaponAtt1Hold"
        android:layout_marginTop="50dp"

        android:id="@+id/weaponAtt1"
        android:fontFamily="@font/outfitregular"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="◉Attachement 2"
        android:textSize="30dp"
        android:gravity="left"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/weaponAtt1"
        android:layout_marginTop="15dp"
        android:id="@+id/weaponAtt2Hold"
        android:fontFamily="@font/outfitregular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Scope x8"
        android:textSize="20dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="@id/weaponAtt2Hold"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:id="@+id/weaponAtt2"
        android:fontFamily="@font/outfitregular"
        />

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/weaponAtt2Hold"
        android:id="@+id/youtubePlayer"
        android:layout_marginTop="20dp"

        />

    <Button
        android:id="@+id/buttonPlayYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="0dp"
        android:text="Play showcase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer" />


</androidx.constraintlayout.widget.ConstraintLayout>